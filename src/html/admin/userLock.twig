<form action="/admin/index.php" method="post" name="userlockform" id="userlockform">
    <input type="hidden" name="uid" value="{{ USERID }}" />
    <input type="hidden" name="sstr" value="{{ SESSIONSTRING }}" />
    <div style="float: left; width: 75%;">
        <table class="tcal">
            <tr>
                <th>Anzahl Ticks</th>
            </tr>
            <tr>
                <td>
                    {% if LOCK %}
                    <input type="text" style="width: 100%" name="ticks" value="{{ LOCK.getRemainingTicks }}" />
                    {% else %}
                    <input type="text" style="width: 100%" name="ticks" value="" />
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Begr√ºndung</th>
            </tr>
            <tr>
                <td>
                    {% if LOCK %}
                    <textarea name="reason" style="width: 100%; height: 300px;">{{ LOCK.getReason }}</textarea>
                    {% else %}
                    <textarea name="reason" style="width: 100%; height: 300px;"></textarea>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="B_LOCK_USER" value="Spieler blockieren" />
                </td>
            </tr>
        </table>
    </div>
</form>
